<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uefs.libraria.controllers.BookRegisterController">
    <children>
        <VBox spacing="20.0" style="-fx-background-color: #E3e3e3; -fx-background-radius: 20px;">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Adicionar Livros">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            <Label fx:id="errorWarningLabel" text="Em caso de erro" textFill="#ff2020">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
                <HBox spacing="20.0">
                    <children>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Título" />
                                <TextField fx:id="cTitulo" style="-fx-background-color: #d9d9d9; -fx-background-radius: 10px;" />
                            </children>
                        </VBox>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Autor" />
                                <TextField fx:id="cAutor" style="-fx-background-color: #d9d9d9; -fx-background-radius: 10px;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            <HBox spacing="20.0">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Editora" />
                        <TextField fx:id="cEditora" style="-fx-background-color: #d9d9d9; -fx-background-radius: 10px;" />
                     </children>
                  </VBox>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="ISBN" />
                                <TextField fx:id="cISBN" style="-fx-background-color: #d9d9d9; -fx-background-radius: 10px;" />
                            </children>
                        </VBox>
               </children>
            </HBox>
                <HBox spacing="20.0">
                    <children>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Ano de Publicação" />
                                <TextField fx:id="cAnoPublicacao" style="-fx-background-color: #d9d9d9; -fx-background-radius: 10px;" />
                            </children>
                        </VBox>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Categoria" />
                                <TextField fx:id="cCategoria" style="-fx-background-color: #d9d9d9; -fx-background-radius: 10px;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox spacing="20.0">
                    <children>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Quantidade disponível" />
                                <TextField fx:id="cQuantidadeDisp" style="-fx-background-color: #d9d9d9; -fx-background-radius: 10px;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="BOTTOM_RIGHT" spacing="20.0">
                    <children>
                        <Button fx:id="cancelButton" alignment="CENTER" cancelButton="true" mnemonicParsing="false" prefWidth="85.0" style="-fx-border-color: #ff2626; -fx-border-radius: 20px; -fx-background-color: rgba(0,0,0,0);" text="Cancelar" textFill="#ff2626">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                        </Button>
                        <Button fx:id="addBookButton" defaultButton="true" mnemonicParsing="false" prefWidth="85.0" style="-fx-background-color: #131415; -fx-background-radius: 20px; -fx-border-radius: 20; -fx-border-color: #131415;" text="Adicionar" textFill="WHITE" />
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>

<BorderPane minHeight="400.0" minWidth="600.0" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: d9d9d9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uefs.libraria.controllers.AdministratorHomeController">
   <top>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <ImageView fitHeight="142.0" fitWidth="142.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../assets/logo-1x.png" />
                     </image>
                  </ImageView>
                  <Label text="Bibliotecário(a)" textFill="#575757">
                     <font>
                        <Font name="Montserrat ExtraLight" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Separator opacity="0.0" orientation="VERTICAL" prefHeight="200.0">
               <padding>
                  <Insets left="30.0" right="30.0" />
               </padding>
            </Separator>
            <VBox alignment="CENTER" prefHeight="180.0" prefWidth="450.0">
               <children>
                  <TextField promptText="Pesquisar livro (título, autor, ISBN)..." style="-fx-background-color: rgba(0,0,0,0); -fx-border-color: #131415; -fx-border-radius: 20;">
                     <font>
                        <Font name="Open Sans Italic" size="12.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </TextField>
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
   <left>
      <VBox prefHeight="520.0" prefWidth="225.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <ImageView fx:id="iconImage" fitHeight="100.0" fitWidth="100.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../assets/default-user-icon.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="greetingLabel" contentDisplay="CENTER" text="Boas vindas," textAlignment="CENTER" textFill="#131415">
                     <font>
                        <Font name="Open Sans Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="usernameLabel" text="\@" textFill="#131415">
                     <font>
                        <Font name="Open Sans Italic" size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="311.0" prefWidth="163.0" spacing="20.0" style="-fx-background-color: #e3e3e3; -fx-background-radius: 30;">
               <children>
                  <Button fx:id="logoutButton1" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #f22424; -fx-background-radius: 20px;" text="Logout" textFill="#d9d9d9" underline="true">
                     <font>
                        <Font name="Open Sans Regular" size="12.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <effect>
                  <DropShadow>
                     <color>
                        <Color red="0.8289473652839661" green="0.8289473652839661" blue="0.8289473652839661" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
